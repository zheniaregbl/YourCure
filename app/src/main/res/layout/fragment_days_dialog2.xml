<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:cardCornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDaysInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Укажите количество\nдней"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edDaysSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:inputType="number|numberSigned"
            android:text="1"
            android:textColor="@color/blue_grey"
            android:textSize="24sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMinusDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="95dp"
            android:clickable="true"
            android:importantForAccessibility="no"
            android:scaleType="center"
            android:src="@drawable/ic_minus"
            app:backgroundTint="@color/grey_floating_button"
            app:fabCustomSize="45dp"
            app:maxImageSize="10dp"
            app:tint="@color/blue" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabPlusDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="51dp"
            android:clickable="true"
            android:importantForAccessibility="no"
            android:scaleType="center"
            android:src="@drawable/ic_add_plus"
            app:backgroundTint="@color/grey_floating_button"
            app:fabCustomSize="45dp"
            app:maxImageSize="25dp"
            app:tint="@color/blue" />

        <Button
            android:id="@+id/btDaysDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="185dp"
            android:backgroundTint="@color/blue"
            android:text="Готово"
            app:cornerRadius="11dp" />

        <Button
            android:id="@+id/btDaysCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/red"
            android:text="Отмена"
            app:cornerRadius="11dp" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>